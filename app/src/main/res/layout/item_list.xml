<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    X<androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Baju"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:id="@+id/tvMainNama"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Merek Baju"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:id="@+id/tvMainMerek"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Baju"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:id="@+id/tvMainJenis"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga Baju"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:id="@+id/tvMainHarga"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jumlah Baju"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:id="@+id/tvMainJumlah"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
